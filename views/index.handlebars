<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
            value="{{keyword}}" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
    <div class="categorySearch mt-2">
      <span class="badge badge-secondary mr-1">快速搜尋 :</span>
      {{#each category}}
      <a href="/search?keyword={{ this }}" class="badge badge-pill badge-dark mx-1">{{ this }}</a>
      {{/each}}
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row row-cols-1 row-cols-sm-2 row-cols-lg-3 row-cols-xl-4">

    {{#each restaurants}}
    <div class="col mb-4 text-secondary">
      <div class="card h-100">
        <a href="/restaurants/{{this._id}}">
          <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
        </a>
        <div class="card-body p-3">
          <h6 class="card-title mb-1">{{this.name}}</h6>

          <div class="restaurant-category mb-1 badge badge-info text-white">
            <i class="fas fa-utensils pr-2"></i> {{this.category}}
          </div>

          <span class="badge badge-danger font-weight-normal">
            {{this.rating}}
            <i class="fas fa-star fa-xs"></i>
          </span>

        </div>
        <div class="card-footer text-right p-3">
          <a href="/restaurants/{{this._id}}/edit" class="btn btn-outline-primary">Edit</a>
          <a href="/restaurants/{{this._id}}" class="btn btn-outline-primary">Detail</a>
          <button type="button" class="btn btn-outline-danger" data-toggle="modal" data-target="#deleteModal{{ this._id }}">Delete</button>
        </div>

      </div>
    </div>
    {{/each}}

  </div>
</div>
{{#each restaurants}}
{{!-- Modal --}}
<div class="modal fade" id="deleteModal{{ this._id }}" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="deleteModalLabel">Delete Confirm</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>確定要刪除 {{this.name}} 嗎？</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <form action="/restaurants/{{this._id}}/delete" method="POST" style="display: inline;">
          <button type="submit" class="btn btn-danger">Delete</button>
        </form>
      </div>
    </div>
  </div>
</div>
{{/each}}

{{!-- new --}}
<a href="./restaurants/new">
  <button id="addButton" class="btn btn-warning font-weight-bold text-white rounded-circle" style="font-size: 30px; width: 60px; height: 60px; position: fixed; right: 3%; bottom: 8%; "><i class="fas fa-plus"></i></button>
</a>